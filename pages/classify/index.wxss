

.category_container{
  width: 100%;
  height: 100%;
  background-color: #f3f3f3; 
}

.category_search_Container{
  width: 100%;
  height: 50px;
  margin-top: 0;
  margin-left: 0;
  background-color: white; 
  display: flex;
  align-items: center;
  justify-content: center;
}

.category_search_Container_view{
  height: 30px;
  width: calc(100% - 40px);
  background: #f3f3f3;
  display: flex;
  align-items: center;
  border-radius: 15px;
  flex-wrap: nowrap
}

.category_search_Container_icon{
  margin-left: 10px;
  width:20px;
  height:20px;
  align-self: center;
}

.category_search_Container_text{
  font-size: 10px;
  color: #666666;
  line-height: 18px;
  width: 200px;
  align-self: center;
  margin-left: 10px;
  font-weight: lighter;
}
.categoryLists_Container{
  width: 25%;
  background-color: #f3f3f3;
  margin-left: 0;
  margin-top: 0px;
  height: calc(100% - 50px);
}

.category_product_container{
  height: calc(100% - 50px);
  background-color: white;
  left: 25%;
  right: 0;
  top: 50px;
  width: 75%;
  position: absolute;
}

.category_item_container{
  height: 50px;
  width: 100%;
  /* background-color: white; */
}

.category_item_indexView{
  background-color: olive;
  margin-left: 0px;
  margin-top: 0px;
  width: 2px;
  height: 50px;
  float: left;
  overflow: hidden;
}

.category_item_text_container{
  float: left;
  margin-left: 12px;
  width:calc(100% -12px);
  height:50px;
}

 .category_item_text{
  font-size: 15px;
  color: #333333;
  font-weight: lighter;
  width:100%; 
  height:50px;
  text-align:center;
  display: table-cell;
  vertical-align: middle;
} 

.productImage{
  margin-top: 6px;
  margin-left: 5px;
  width: calc(100% - 10px);
  height: 80px;
  background-color: #f3f3f3;
}

.allCategoryChildContainerView{
  margin-left: 0px;
  width: calc(100% - 10px);
  height: calc(100% - 95px);
}

.categoryListsItem_container{
  height: 50px;
  width: 100%;
  background-color: white;
  margin-left: 0;
  margin-top: 0px;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
  align-content: center;
}

.categoryListsItem_text{
  width: calc(100% - 30px); 
  height: 49px;
  font-size: 14px;
  color: #333333;
  text-align: left;
  display: table-cell;
  vertical-align: middle; 
  font-weight: lighter;
  float: left;
  margin-left: 6px;
  align-self: center;
  line-height: 49px;
}

.categoryListsItem_caverView{
  height: 0.5px;
  background-color: #dae2e3;
  width: 100%;
  margin-bottom: 0px;
  float: left;
  margin-left: 0px;
  margin-right: 0px;
}

.categoryListsItem_indexIcon{
  float: right;
  width: 12px;
  height: 12px;
  margin-top: 18px;
}


.product_ContainerView{
  background-color: white;
  width: 100%;
  margin-top: 15px;

}

.product_item_Name{
  height: 20px;
  font-size: 12px;
  line-height: 20px;
  text-align: left;
  color: #333333;
  background: white;
  margin-left: 5px;
}

.product_item_Container{
  width: 100%;
  background: white;
  flex-direction: row;
  display: flex;
  flex-wrap: wrap;
}

.product_item_View{
  width: 80px;
  background: white;
  margin-left: 8px;
  margin-top: 12px;
}

.centerText{
  line-height: 18px;
  font-size: 12px;
  color: #333333;
  text-align: center;
  width: 100%; 
  display: table-cell;
  vertical-align: middle; 
  font-weight: lighter;
  float: left;
  margin-left: 0px;
  align-self: center;
}

.product_item_image{
  width: 80px;
  height: 60px;
  display: flex;
  vertical-align: middle;
  justify-content: center;
  margin-left: 0px;
}